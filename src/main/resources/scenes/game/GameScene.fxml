<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>


<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
   prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/23.0.1"
   xmlns:fx="http://javafx.com/fxml/1">

   <top>
      <MenuBar BorderPane.alignment="CENTER">
         <menus>
            <Menu mnemonicParsing="false" text="Jeu">
               <items>
                  <MenuItem fx:id="menuItemMainMenu" mnemonicParsing="false" text="Menu"
                     onAction="#handleMainMenu" />
                  <MenuItem fx:id="menuItemTeamSelect" mnemonicParsing="false" text="Nouveau"
                     onAction="#handleTeamSelect" />
                  <MenuItem fx:id="menuItemLoadGame" mnemonicParsing="false" text="Charger"
                     onAction="#handleLoadGame" />
                  <MenuItem fx:id="menuItemSettings" mnemonicParsing="false" text="Paramètres"
                     onAction="#handleSettings" />
                  <SeparatorMenuItem />
                  <MenuItem fx:id="menuItemQuit" mnemonicParsing="false" text="Quitter"
                     onAction="#handleQuit" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Aide">
               <items>
                  <MenuItem mnemonicParsing="false" text="About" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
   </top>

   <center>
      <VBox alignment="CENTER" spacing="10">
         <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
         </padding>
         <GridPane fx:id="gameGrid" alignment="CENTER" VBox.vgrow="ALWAYS">
            <columnConstraints>
               <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
         </GridPane>
         <Label fx:id="teamTurnLabel" alignment="CENTER" />
      </VBox>
   </center>

   <right>
      <StackPane prefWidth="150" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10" left="5" right="10" top="10" />
         </padding>
         <children>
            <ProgressBar fx:id="blueTeamProgress"
               maxHeight="Infinity"
               maxWidth="Infinity"
               prefHeight="Infinity"
               prefWidth="200"
               style="-fx-accent: #0000cc; -fx-control-inner-background: #ccccff;"
               VBox.vgrow="ALWAYS"
               scaleX="-1" />
            <VBox alignment="CENTER" spacing="10" scaleX="-1.0">
               <Label scaleX="-1.0"
                  style="-fx-font-weight: bold; -fx-text-fill: white; -fx-background-color: rgba(0,0,0,0.5); -fx-padding: 5;"
                  text="Équipe Bleue" />
               <Label scaleX="-1.0"
                  style="-fx-font-weight: bold; -fx-text-fill: white; -fx-background-color: rgba(0,0,0,0.5); -fx-padding: 5;"
                  text="Maître-espion" />
               <Label fx:id="blueTeamSpymaster" scaleX="-1.0"
                  style="-fx-text-fill: white; -fx-background-color: rgba(0,0,0,0.5); -fx-padding: 5;" />
               <Label scaleX="-1.0"
                  style="-fx-font-weight: bold; -fx-text-fill: white; -fx-background-color: rgba(0,0,0,0.5); -fx-padding: 5;"
                  text="Opérateurs" />
               <VBox fx:id="blueTeamOperators" alignment="CENTER" spacing="5" scaleX="-1.0" />
            </VBox>
         </children>
      </StackPane>
   </right>

   <bottom>
      <VBox alignment="CENTER" spacing="10">
         <HBox fx:id="hintInputBox" alignment="CENTER_LEFT" prefHeight="84.0" prefWidth="1280.0"
            spacing="10">
            <padding>
               <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <children>
               <Region prefHeight="24.0" prefWidth="340.0" />
               <Label alignment="CENTER" contentDisplay="CENTER" prefWidth="135.0"
                  text="Indice à donner :" />
               <TextField fx:id="hintField" />
               <MenuButton fx:id="numberChoice" mnemonicParsing="false" text="Nombre" />
               <Button mnemonicParsing="false" onAction="#submitHint" text="Valider" />
               <Region prefHeight="24.0" prefWidth="289.0" />
               <Button fx:id="qrCodeButton" mnemonicParsing="false" onAction="#openQRCode"
                  prefHeight="75.0" prefWidth="75.0" />
            </children>
         </HBox>

         <HBox fx:id="hintDisplayBox" alignment="CENTER" spacing="20">
            <padding>
               <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <children>
               <Label fx:id="hintLabel" style="-fx-font-size: 16px;" />
               <Label fx:id="remainingGuessesLabel" style="-fx-font-size: 16px;" />
            </children>
         </HBox>
      </VBox>
   </bottom>

   <left>
      <StackPane prefWidth="150" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10" left="10" right="5" top="10" />
         </padding>
         <children>
            <ProgressBar fx:id="redTeamProgress"
               maxHeight="Infinity"
               maxWidth="Infinity"
               prefHeight="Infinity"
               prefWidth="200"
               style="-fx-accent: #cc0000; -fx-control-inner-background: #ffcccc;"
               VBox.vgrow="ALWAYS" />
            <VBox alignment="CENTER" spacing="10">
               <Label
                  style="-fx-font-weight: bold; -fx-text-fill: white; -fx-background-color: rgba(0,0,0,0.5); -fx-padding: 5;"
                  text="Équipe Rouge" />
               <Label
                  style="-fx-font-weight: bold; -fx-text-fill: white; -fx-background-color: rgba(0,0,0,0.5); -fx-padding: 5;"
                  text="Maître-espion" />
               <Label fx:id="redTeamSpymaster"
                  style="-fx-text-fill: white; -fx-background-color: rgba(0,0,0,0.5); -fx-padding: 5;" />
               <Label
                  style="-fx-font-weight: bold; -fx-text-fill: white; -fx-background-color: rgba(0,0,0,0.5); -fx-padding: 5;"
                  text="Opérateurs" />
               <VBox fx:id="redTeamOperators" alignment="CENTER" spacing="5" />
            </VBox>
         </children>
      </StackPane>
   </left>

</BorderPane>