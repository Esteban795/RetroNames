<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/8"
    xmlns:fx="http://javafx.com/fxml/1">
    <BorderPane
        styleClass="menu-background"
    >

        <top>
            <VBox>
                <Label fx:id="gameTitle" text="RetroNames" styleClass="game-title"
                    BorderPane.alignment="TOP_LEFT">
                    <padding>
                        <Insets top="40.0" bottom="40.0" left="80.0" />
                    </padding>
                    <BorderPane.margin>
                        <Insets top="30.0" left="50.0" />
                    </BorderPane.margin>
                </Label>
            </VBox>
        </top>

        <padding>
            <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
        </padding>

        <center>
            <VBox BorderPane.alignment="CENTER_LEFT"
                alignment="TOP_LEFT"
                spacing="20.0">
                <padding>
                    <Insets top="50.0" right="20.0" bottom="20.0" left="180.0" />
                </padding>

                <Button fx:id="latestGameBtn"
                    text="DerniÃ¨re Partie"
                    styleClass="menu-button-long"
                    focusTraversable="true"
                    onMouseEntered="#requestFocus"
                />

                <VBox fx:id="savedGamesBox"
                    alignment="TOP_LEFT"
                    spacing="10" />

                <Button fx:id="browseSavesBtn"
                    text="Sauvegardes Locales"
                    styleClass="menu-button-long"
                    focusTraversable="true"
                    onMouseEntered="#requestFocus"
                />

                <Button text="Retour"
                    onAction="#goBack"
                    styleClass="menu-button"
                    focusTraversable="true"
                    onMouseEntered="#requestFocus"
                />

                <Label fx:id="errorLabel"
                    textFill="RED"
                    visible="false"
                />
            </VBox>
        </center>

    </BorderPane>
    <Pane fx:id="particlePane" mouseTransparent="true" prefWidth="1200" prefHeight="800" />
    <Label text="Fait par WHJFX"
        StackPane.alignment="BOTTOM_RIGHT"
        styleClass="credits-label">
        <padding>
            <Insets bottom="10.0" right="20.0" />
        </padding>
    </Label>
</StackPane>