<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/8"
    xmlns:fx="http://javafx.com/fxml/1"
    styleClass="menu-background"
>

    <top>
        <Label fx:id="gameTitle" text="LynguaCrypt" styleClass="game-title"
            BorderPane.alignment="TOP_LEFT">
            <padding>
                <Insets top="20.0" bottom="20.0" left="50.0" />
            </padding>
            <BorderPane.margin>
                <Insets top="20.0" left="30.0" />
            </BorderPane.margin>
        </Label>
    </top>

    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
    </padding>

    <center>
        <VBox BorderPane.alignment="CENTER_LEFT"
            alignment="TOP_LEFT"
            spacing="20.0">
            <padding>
                <Insets top="50.0" right="20.0" bottom="20.0" left="180.0" />
            </padding>

            <Button fx:id="latestGameBtn"
                text="DerniÃ¨re Partie"
                styleClass="menu-button-long"
                focusTraversable="true"
                onMouseEntered="#requestFocus"
            />

            <VBox fx:id="savedGamesBox"
                alignment="TOP_LEFT"
                spacing="10" />

            <Button fx:id="browseSavesBtn"
                text="Sauvegardes Locales"
                styleClass="menu-button-long"
                focusTraversable="true"
                onMouseEntered="#requestFocus"
            />

            <Button text="Retour"
                onAction="#goBack"
                styleClass="menu-button"
                focusTraversable="true"
                onMouseEntered="#requestFocus"
            />

            <Label fx:id="errorLabel"
                textFill="RED"
                visible="false"
            />
        </VBox>
    </center>

</BorderPane>