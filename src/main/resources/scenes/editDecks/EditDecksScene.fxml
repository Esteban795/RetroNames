<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<VBox xmlns:fx="http://javafx.com/fxml"
    prefHeight="600.0" prefWidth="800.0"
    styleClass="root"
>

    <children>
        <SplitPane dividerPositions="0.5" orientation="HORIZONTAL" VBox.vgrow="ALWAYS"
            styleClass="split-pane">
            <items>
                <VBox>
                    <!-- Left side content -->
                    <Button text="New Deck" onAction="#showNewDeckPopup" styleClass="deck-button" />

                    <ScrollPane VBox.vgrow="ALWAYS" styleClass="scroll-pane">
                        <VBox fx:id="deckList" styleClass="panel">
                            <!-- Deck list -->

                        </VBox>
                    </ScrollPane>
                </VBox>
                <VBox styleClass="panel">
                    <!-- Right side content -->
                    <HBox spacing="10">
                        <Button fx:id="newCardButton" text="New Card" onAction="#showNewCardPopup"
                            styleClass="card-button" />
                        <Button fx:id="duplicateDeckButton" text="Duplicate Deck"
                            onAction="#showDuplicateDeckPopup" styleClass="deck-button" />
                        <Button fx:id="deleteDeckButton" text="Delete Deck" onAction="#deleteDeck"
                            styleClass="delete-deck-button" />
                    </HBox>

                    <ScrollPane VBox.vgrow="ALWAYS" styleClass="scroll-pane">
                        <VBox fx:id="cardList">
                            <!-- Card list -->
                        </VBox>
                    </ScrollPane>
                    <VBox fx:id="cardInfoBox" spacing="5" styleClass="card-info-box">
                        <HBox spacing="10">
                            <VBox spacing="5">
                                <Label text="Card Information:" />
                                <Label text="Card Name:" />
                                <Label text="Deck:" />
                            </VBox>
                            <Button fx:id="addToAnotherDeckButton" text="Add to Another Deck"
                                onAction="#showAddToAnotherDeckDialog" />
                        </HBox>
                    </VBox>
                    <fx:define>
                        <Dialog fx:id="newCardDialog" title="New Card">
                            <dialogPane>
                                <DialogPane>
                                    <content>
                                        <VBox spacing="10">
                                            <Label text="Card Name:" />
                                            <TextField fx:id="cardNameField" />
                                        </VBox>
                                    </content>
                                    <buttonTypes>
                                        <ButtonType text="OK" buttonData="OK_DONE" />
                                        <ButtonType text="Cancel" buttonData="CANCEL_CLOSE" />
                                    </buttonTypes>
                                </DialogPane>
                            </dialogPane>
                        </Dialog>

                        <Dialog fx:id="newDeckDialog" title="New Deck">
                            <dialogPane>
                                <DialogPane>
                                    <content>
                                        <VBox spacing="10">
                                            <Label text="Deck Name:" />
                                            <TextField fx:id="deckNameField" />
                                        </VBox>
                                    </content>
                                    <buttonTypes>
                                        <ButtonType text="OK" buttonData="OK_DONE" />
                                        <ButtonType text="Cancel" buttonData="CANCEL_CLOSE" />
                                    </buttonTypes>
                                </DialogPane>
                            </dialogPane>
                        </Dialog>
                    </fx:define>
                </VBox>
            </items>
        </SplitPane>
        <VBox>
            <!-- Bottom content -->
            <HBox alignment="CENTER_RIGHT" styleClass="panel">
                <Button text="Back"
                    onAction="#goBack"
                    styleClass="menu-button" />
            </HBox>
        </VBox>
    </children>
</VBox>